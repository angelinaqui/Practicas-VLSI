library ieee;
use ieee.std_logic_1164.all;
use ieee.numeric_std.all;

entity concu1 is
    port(
        clk: in std_logic;
        ssg0: out std_logic_vector(6 downto 0);
        ssg1: out std_logic_vector(6 downto 0);
        ssg2: out std_logic_vector(6 downto 0);
        ssg3: out std_logic_vector(6 downto 0);
        carry: out std_logic
    );
end entity;

architecture a of concu1 is
    signal clkl: std_logic := '0'; -- Divisor de frecuencia
    signal contador: integer range 0 to 250000 := 0;
    signal conteo1, conteo2, conteo3, conteo4: integer := 0;
    signal bandera1, bandera2, bandera3, bandera4: std_logic := '0';
    signal carry_int: std_logic := '0';

begin
    -- Divisor de frecuencia
    process(clk)
    begin
        if rising_edge(clk) then
            if contador = 250000 then
                contador <= 0;
                clkl <= not clkl;
            else
                contador <= contador + 1;
            end if;
        end if;
    end process;

    -- Counter1
    process(clkl)
    begin
        if rising_edge(clkl) then
            if conteo1 = 9 then
                conteo1 <= 0;
                bandera1 <= '1';
            else
                conteo1 <= conteo1 + 1;
                bandera1 <= '0';
            end if;
        end if;
    end process;

    -- Counter2
    process(bandera1)
    begin
        if rising_edge(bandera1) then
            if conteo2 = 9 then
                conteo2 <= 0;
                bandera2 <= '1';
            else
                conteo2 <= conteo2 + 1;
                bandera2 <= '0';
            end if;
        end if;
    end process;

    -- Counter3
    process(bandera2)
    begin
        if rising_edge(bandera2) then
            if conteo3 = 9 then
                conteo3 <= 0;
                bandera3 <= '1';
            else
                conteo3 <= conteo3 + 1;
                bandera3 <= '0';
            end if;
        end if;
    end process;

    -- Counter4
    process(bandera3)
    begin
        if rising_edge(bandera3) then
            if conteo4 = 9 then
                conteo4 <= 0;
                bandera4 <= '1';
            else
                conteo4 <= conteo4 + 1;
                bandera4 <= '0';
            end if;
        end if;
    end process;

    -- SeÃ±al carry como OR de las banderas
    carry <= bandera1 or bandera2 or bandera3 or bandera4;

    -- Display de 7 segmentos para ssg0
    with conteo1 select
    ssg0 <= "1000000" when 0,
            "1111001" when 1,
            "0100100" when 2,
            "0110000" when 3,
            "0011001" when 4,
            "0010010" when 5,
            "0000010" when 6,
            "1111000" when 7,
            "0000000" when 8,
            "0011000" when 9,
            "1111111" when others;

    -- Display de 7 segmentos para ssg1
    with conteo2 select
    ssg1 <= "1000000" when 0,
            "1111001" when 1,
            "0100100" when 2,
            "0110000" when 3,
            "0011001" when 4,
            "0010010" when 5,
            "0000010" when 6,
            "1111000" when 7,
            "0000000" when 8,
            "0011000" when 9,
            "1111111" when others;

    -- Display de 7 segmentos para ssg2
    with conteo3 select
    ssg2 <= "1000000" when 0,
            "1111001" when 1,
            "0100100" when 2,
            "0110000" when 3,
            "0011001" when 4,
            "0010010" when 5,
            "0000010" when 6,
            "1111000" when 7,
            "0000000" when 8,
            "0011000" when 9,
            "1111111" when others;

    -- Display de 7 segmentos para ssg3
    with conteo4 select
    ssg3 <= "1000000" when 0,
            "1111001" when 1,
            "0100100" when 2,
            "0110000" when 3,
            "0011001" when 4,
            "0010010" when 5,
            "0000010" when 6,
            "1111000" when 7,
            "0000000" when 8,
            "0011000" when 9,
            "1111111" when others;

end architecture;
